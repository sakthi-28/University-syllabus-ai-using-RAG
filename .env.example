# Embedding Configuration (local)
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# LLM Provider Configuration (OpenRouter only)
LLM_PROVIDER=openrouter

# LLM Model name
# For OpenRouter: 'z-ai/glm-4.5-air:free', 'openai/gpt-3.5-turbo', etc.
LLM_MODEL=z-ai/glm-4.5-air:free

# OpenRouter API Key (required if using OpenRouter)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter Base URL (usually doesn't need to be changed)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ChromaDB Configuration
CHROMA_DB_PATH=./chroma_db

# Text Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAG Configuration
TOP_K_RESULTS=4

# ChromaDB Collection Name
COLLECTION_NAME=syllabus_documents
